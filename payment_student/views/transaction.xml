<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="transaction_tree" model="ir.ui.view">
    <field name="model">payment.transaction</field>
    <field name="inherit_id" ref="payment_jetcheckout_system.transaction_tree"/>
    <field name="arch" type="xml">
        <xpath expr='//field[@name="partner_ref"]' position="after">
            <field name="system_student_faculty_id" optional="hide" groups="payment_student.group_type_university"/>
            <field name="system_student_department_id" optional="hide" groups="payment_student.group_type_university"/>
            <field name="system_student_program_id" optional="hide" groups="payment_student.group_type_university"/>
        </xpath>
    </field>
    </record>

    <record id="transaction_search" model="ir.ui.view">
    <field name="model">payment.transaction</field>
    <field name="inherit_id" ref="payment_jetcheckout_system.transaction_search"/>
    <field name="arch" type="xml">
        <xpath expr="//group" position="inside">
            <field name="system_student_faculty_id" groups="payment_student.group_type_university"/>
            <field name="system_student_department_id" groups="payment_student.group_type_university"/>
            <field name="system_student_program_id" groups="payment_student.group_type_university"/>
        </xpath>
    </field>
    </record>
</odoo>
