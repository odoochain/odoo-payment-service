<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="database_external_tree" model="ir.ui.view">
    <field name="name">ir.database.external.tree</field>
    <field name="model">ir.database.external</field>
    <field name="arch" type="xml">
        <tree decoration-muted="active == False" sample="1">
            <field name="sequence" widget="handle"/>
            <field name="type" required="1"/>
            <field name="server"/>
            <field name="username"/>
            <field name="password" password="True"/>
            <field name="database"/>
            <field name="active" widget="boolean_toggle"/>
            <button name="action_test_connection" string="Test Connection" type="object" icon="fa-wrench" attrs="{'invisible': [('active', '=', False)]}"/>
            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True, 'no_open': True}" optional="hide"/>
        </tree>
    </field>
    </record>

    <record id="database_external_form" model="ir.ui.view">
    <field name="name">ir.database.external.form</field>
    <field name="model">ir.database.external</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="type" required="1"/>
                        <field name="server"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                        <field name="database"/>
                        <button name="action_test_connection" string="Test Connection" type="object" icon="fa-wrench" attrs="{'invisible': [('active', '=', False)]}" colspan="2"/>
                    </group>
                    <group>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
    </record>

    <record id="action_database_external" model="ir.actions.act_window">
    <field name="name">External Databases</field>
    <field name="res_model">ir.database.external</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">['|',('active','=',False),('active','=',True)]</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No external databases yet
        </p>
        <p>
            External databases are listed here
        </p>
    </field>
    </record>

    <menuitem id="menu_database_external" action="action_database_external" parent="base.next_id_9"/>
</odoo>
