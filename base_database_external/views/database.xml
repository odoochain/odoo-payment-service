<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="database_external_tree" model="ir.ui.view">
    <field name="name">ir.database.external.tree</field>
    <field name="model">ir.database.external</field>
    <field name="arch" type="xml">
        <tree decoration-muted="active == False" sample="1">
            <field name="sequence" widget="handle"/>
            <field name="type" required="1"/>
            <field name="server"/>
            <field name="username"/>
            <field name="password" password="True"/>
            <field name="database"/>
            <field name="active" widget="boolean_toggle"/>
            <button name="action_test_connection" string="Test Connection" type="object" icon="fa-wrench" attrs="{'invisible': [('active', '=', False)]}"/>
            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True, 'no_open': True}" optional="hide"/>
        </tree>
    </field>
    </record>

    <record id="database_external_form" model="ir.ui.view">
    <field name="name">ir.database.external.form</field>
    <field name="model">ir.database.external</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="type" required="1"/>
                        <field name="server"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                        <field name="database"/>
                        <button name="action_test_connection" string="Test Connection" type="object" icon="fa-wrench" attrs="{'invisible': [('active', '=', False)]}" colspan="2" class="btn btn-secondary border border-primary m-3 py-2 px-5"/>
                    </group>
                    <group>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </group>
                <notebook>
                    <page name="method" string="Methods">
                        <field name="method_ids"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
    </record>

    <record id="database_external_method_tree" model="ir.ui.view">
    <field name="name">ir.database.external.method.tree</field>
    <field name="model">ir.database.external.method</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" required="1"/>
            <field name="procedure"/>
            <field name="parameter_ids"/>
            <field name="response_ids"/>
        </tree>
    </field>
    </record>

    <record id="database_external_method_form" model="ir.ui.view">
    <field name="name">ir.database.external.method.form</field>
    <field name="model">ir.database.external.method</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <p class="text-center">
                    <field name="name" class="w-25" placeholder="Name" required="1"/>
                    <span class="fa fa-long-arrow-right mx-5"></span>
                    <field name="procedure" class="w-25" placeholder="Procedure"/>
                </p>
                <group>
                    <group string="Parameters">
                        <field name="parameter_ids" nolabel="1" colspan="2" context="{'default_type': 'parameter'}"/>
                    </group>
                    <group string="Responses">
                        <field name="response_ids" nolabel="1" colspan="2" context="{'default_type': 'response'}"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
    </record>

    <record id="database_external_mapping_tree" model="ir.ui.view">
    <field name="name">ir.database.external.mapping.tree</field>
    <field name="model">ir.database.external.mapping</field>
    <field name="arch" type="xml">
        <tree editable="bottom">
            <field name="type" invisible="1"/>
            <field name="name"/>
            <field name="remote"/>
            <field name="column" required="1"/>
        </tree>
    </field>
    </record>

    <record id="database_external_mapping_form" model="ir.ui.view">
    <field name="name">ir.database.external.mapping.form</field>
    <field name="model">ir.database.external.mapping</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <p class="text-center">
                    <field name="name" class="w-25" placeholder="Name"/>
                    <span class="fa fa-long-arrow-right mx-5"></span>
                    <field name="remote" class="w-25" placeholder="Remote Name"/>
                </p>
            </sheet>
        </form>
    </field>
    </record>

    <record id="action_database_external" model="ir.actions.act_window">
    <field name="name">External Databases</field>
    <field name="res_model">ir.database.external</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">['|',('active','=',False),('active','=',True)]</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No external databases yet
        </p>
        <p>
            External databases are listed here
        </p>
    </field>
    </record>

    <menuitem id="menu_database_external" action="action_database_external" parent="base.next_id_9"/>
</odoo>
