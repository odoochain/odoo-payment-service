<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_page_jconda" name="Payment System Page - Jconda" inherit_id="payment_jetcheckout_system.payment_page">
        <xpath expr="t[@t-call='payment_jetcheckout.payment_sidebar']" position="inside">
            <t t-set="labels">
                <t t-if="show_balance">
                    <label for="balance" class="text-primary font-weight-bold mt-2 mb-0">Balance</label>
                    <t t-foreach="balances" t-as="balance">
                        <span t-esc="balance['amount']" t-attf-class="#{'text-danger' if balance['amount'] &lt; 0 else 'text-600'}" t-options="{'widget': 'monetary', 'display_currency': balance['currency']}"/>
                    </t>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
