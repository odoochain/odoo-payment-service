<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="api_campaign_form" model="ir.ui.view">
    <field name="name">payment.acquirer.jetcheckout.api.campaign.form</field>
    <field name="model">payment.acquirer.jetcheckout.api.campaign</field>
    <field name="arch" type="xml">
        <form string="Campaign">
            <sheet>
                <group>
                    <field name="pos_id" invisible="1"/>
                    <field name="offer_name"/>
                    <field name="currency_id"/>
                    <field name="family_ids"/>
                </group>
                <group>
                    <field name="is_active"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                </group>
                <notebook>
                    <page string="Installments">
                        <field name="installment_ids">
                            <tree editable="bottom">
                                <field name="installment_type"/>
                                <field name="customer_rate"/>
                                <field name="cost_rate"/>
                                <field name="is_active"/>
                                <field name="plus_installment"/>
                                <field name="plus_installment_description"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Excluded Bins">
                        <field name="excluded_bin_ids"/> 
                    </page>
                </notebook> 
            </sheet>
            <footer>
                <!--<button special="save" class="btn-secondary" string="Save" attrs="{'invisible': [('pos_id','=',False)]}"/>-->
                <button special="cancel" class="btn-secondary" string="Close"/>
            </footer>
        </form>
    </field>
    </record>
</odoo>
