<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_button" inherit_id="portal.placeholder_user_sign_in" name="Paylox Button">
        <xpath expr="." position="inside">
            <li t-if="pay_page" id="menu_pay" groups="base.group_portal, base.group_user" t-attf-class="#{_item_class} o_no_autohide_item">
                <a href="/pay" t-attf-class="#{_link_class}">
                    <i class="fa fa-credit-card mr-2" t-translation="off"/>Payment
                </a>
            </li>
        </xpath>
    </template>

    <template id="user_dropdown" inherit_id="portal.user_dropdown" name="Paylox Button Dropdown">
        <xpath expr="//li[@t-if='is_connected']" position="attributes">
            <attribute name="t-attf-class">nav-item dropdown o_no_autohide_item</attribute>
        </xpath>
    </template>

    <template id="page_payment" name="Paylox Payment Page">
        <t t-call="web.frontend_layout">
            <t t-set="title" t-value="website.name"/>
            <t t-set="x_icon" t-value="'/web/image?model=website&amp;id=%s&amp;field=favicon' % website.id"/>
            <t t-set="body_classname" t-value="'payment-page'"/>
            <t t-call="payment_jetcheckout.payment_card"/>
        </t>
    </template>

    <template id="s2s" name="Paylox S2S Form">
        <t t-if="order">
            <t t-set="data" t-value="order"/>
            <input id="paymentSuccessurl" type="hidden" class="p_fields" name="success_url" value="/payment/card/shop"/>
            <input id="paymentFailurl" type="hidden" class="p_fields" name="fail_url" value="/payment/card/shop"/>
            <input id="paymentOrder" type="hidden" class="p_fields" name="order_id" t-att-value="order.id"/>
        </t>
        <t t-elif="sale_order and sale_order._name == 'sale.order'">
            <t t-set="data" t-value="sale_order"/>
            <input id="paymentSuccessurl" type="hidden" class="p_fields" name="success_url" t-att-value="'/payment/card/order/%s/%s' % (sale_order.id, sale_order.access_token)"/>
            <input id="paymentFailurl" type="hidden" class="p_fields" name="fail_url" t-att-value="'/payment/card/order/%s/%s' % (sale_order.id, sale_order.access_token)"/>
            <input id="paymentOrder" type="hidden" class="p_fields" name="order_id" t-att-value="sale_order.id"/>
        </t>
        <t t-elif="invoice and invoice._name == 'account.move'">
            <t t-set="data" t-value="invoice"/>
            <input id="paymentSuccessurl" type="hidden" class="p_fields" name="success_url" t-att-value="'/payment/card/invoice/%s/%s' % (invoice.id, invoice.access_token)"/>
            <input id="paymentFailurl" type="hidden" class="p_fields" name="fail_url" t-att-value="'/payment/card/invoice/%s/%s' % (invoice.id, invoice.access_token)"/>
            <input id="paymentInvoice" type="hidden" class="p_fields" name="invoice_id" t-att-value="invoice.id"/>
        </t>
        <t t-elif="account and account._name == 'sale.subscription'">
            <t t-set="data" t-value="account"/>
            <input id="paymentSuccessurl" type="hidden" class="p_fields" name="success_url" t-att-value="'/payment/card/subscription/%s/%s' % (account.id, account.uuid)"/>
            <input id="paymentFailurl" type="hidden" class="p_fields" name="fail_url" t-att-value="'/payment/card/subscription/%s/%s' % (account.id, account.uuid)"/>
            <input id="paymentSubscription" type="hidden" class="p_fields" name="subscription_id" t-att-value="account.id"/>
        </t>
        <t t-else="">
            <t t-set="data" t-value="None"/>
            <t t-if="access_token">
                <input id="amount" class="p_fields" type="hidden" t-att-value="amount"/>
                <input id="currency" type="hidden" t-att-data-decimal="currency.decimal_places" data-separator="," data-thousand="." t-att-data-name="currency.name" t-att-data-id="currency.id" t-att-data-position="currency.position" t-att-data-symbol="currency.symbol"/>
                <input id="paymentOrder" type="hidden" class="p_fields" name="order_id" t-att-value="sale_order_id"/>
                <input id="paymentInvoice" type="hidden" class="p_fields" name="invoice_id" t-att-value="invoice_id"/>
                <input id="paymentSuccessurl" type="hidden" class="p_fields" name="success_url" t-att-value="'/payment/card/custom/%s/%s' % (invoice_id or sale_order_id, access_token)"/>
                <input id="paymentFailurl" type="hidden" class="p_fields" name="fail_url" t-att-value="'/payment/card/custom/%s/%s' % (invoice_id or sale_order_id, access_token)"/>
                <t t-set="no_button" t-value="True"/>
                <t t-set="no_card_family" t-value="True"/>
                <t t-set="no_loading" t-value="True"/>
            </t>
            <t t-else="">
                <input id="paymentSuccessurl" type="hidden" class="p_fields" name="success_url" t-att-value="success_url"/>
                <input id="paymentFailurl" type="hidden" class="p_fields" name="fail_url" t-att-value="fail_url"/>
                <t t-set="no_button" t-value="False"/>
                <t t-set="no_card_family" t-value="False"/>
                <t t-set="no_loading" t-value="no_loading"/>
            </t>
            <input id="partner" type="hidden" class="p_fields" name="partner" t-att-value="partner and partner.id or partner_id"/>
        </t>
        <t t-if="data">
            <input id="amount" type="hidden" class="p_fields" t-att-value="data.amount_total if not account else data.recurring_total"/>
            <input id="currency" type="hidden" t-att-data-decimal="data.currency_id.decimal_places" data-separator="," data-thousand="." t-att-data-name="data.currency_id.name" t-att-data-id="data.currency_id.id" t-att-data-position="data.currency_id.position" t-att-data-symbol="data.currency_id.symbol"/>
            <t t-set="no_button" t-value="True"/>
            <t t-set="no_card_family" t-value="True"/>
            <t t-set="no_loading" t-value="True"/>
        </t>
        <div class="payment-card">
            <t t-call="payment_jetcheckout.payment_form">
                <t t-set="s2s" t-value="True"/>
                <t t-set="no_button" t-value="no_button"/>
                <t t-set="no_card_family" t-value="no_card_family"/>
                <t t-set="no_loading" t-value="no_loading"/>
            </t>
        </div>
    </template>

    <template id="payment_sidebar" name="Paylox Payment Sidebar">
        <div class="col-md-3 navbar-light payment-amount w-100 d-flex flex-column">
            <div>
                <div t-if="page in ['payment', 'result']" class="px-3 py-4 bg-white card my-4 shadow">
                    <input id="currency" type="hidden" t-att-data-decimal="currency['decimal']" t-att-data-separator="currency['separator']" t-att-data-thousand="currency['thousand']" t-att-data-name="currency['name']" t-att-data-id="currency['id']" t-att-data-position="currency['position']" t-att-data-symbol="currency['symbol']"/>
                    <t t-if="page == 'payment'">
                        <div class="field-container">
                            <input id="amount" type="text" inputmode="decimal" class="p_fields text-center border-primary" required="required"/>
                            <span class="bar-container"/>
                            <span t-if="currency['position'] == 'before'" class="symbol symbol-before" t-esc="currency['symbol']"/>
                            <span t-else="" class="symbol symbol-after" t-esc="currency['symbol']"/>
                            <label for="amount" class="text-primary"><span>Amount to Pay</span></label>
                        </div>
                    </t>
                    <t t-elif="page == 'result'">
                        <button t-if="tx and tx.state == 'done'" class="btn btn-primary btn-block mt-3 font-weight-bold text-uppercase payment_pay disabled shadow" disabled="disabled"><i class="fa fa-check mr-2" t-translation="off"/>Success</button>
                        <button t-else="" class="btn btn-primary btn-block mt-3 font-weight-bold text-uppercase payment_pay disabled shadow" disabled="disabled"><i class="fa fa-times mr-2" t-translation="off"/>Fail</button>
                    </t>
                    <div t-if="page == 'payment' and not no_payment_icons" class="mt-3">
                        <ul class="mb-0 text-center list-inline payment_icon_list">
                            <t t-set="i" t-value="0"/>
                            <t t-foreach="acquirer.payment_icon_ids" t-as="pm_icon">
                                <li t-attf-class="list-inline-item#{'' if (i &lt; 5) else ' d-none'}">
                                    <span t-field="pm_icon.image_payment_form"
                                        t-options='{"widget": "image", "alt-field": "name"}'/>
                                </li>
                                <li t-if="i==5" class="list-inline-item d-block">
                                    <span class="float-right more_option text-info">
                                        <a href="#" class="o_payment_form_pay_icon_more" data-toggle="tooltip" t-att-title="', '.join([opt.name for opt in acquirer.payment_icon_ids[5:]])">and more</a>
                                    </span>
                                </li>
                                <t t-set="i" t-value="i+1"/>
                            </t>
                        </ul>
                    </div>
                </div>
                <div class="px-3 py-4 bg-white card my-4">
                    <label for="partner" class="text-primary font-weight-bold mb-0 d-block">Partner</label>
                    <span name="partner" t-esc="partner.name" class="text-600"/>
                    <t t-if="contact">
                        <label for="contact.id" class="text-primary font-weight-bold mt-2 mb-0 d-block">Contact</label>
                        <span name="contact" t-esc="contact.name" class="text-600"/>
                    </t>
                    <t t-if="labels" t-raw="labels"/>
                    <input id="partner" type="hidden" class="p_fields" name="partner" t-att-value="partner.id"/>
                    <t t-if="buttons" t-raw="buttons"/>
                </div>
                <div t-if="page == 'payment' and not no_card_preview" style="height: 200px;">
                    <t t-call="payment_jetcheckout.payment_preview"/>
                </div>
                <t t-raw="0"/>
            </div>
        </div>
    </template>

    <template id="payment_smart_button" name="Paylox Payment Smart Buttons">
        <div t-if="not no_smart_buttons and not s2s" class="oe_button_box row mx-0">
            <a t-if="page != 'payment'" role="button" href="/pay" class="btn oe_stat_button col-md-3">
                <i class="fa fa-fw o_button_icon fa-undo icon"></i>
                <div class="o_stat_info">
                    <span class="o_stat_text">Return</span><span class="o_stat_text">Payment</span>
                </div>
            </a>
            <a t-if="page in ('payment', 'transaction')" role="button" href="/payment/card/ledger" class="btn oe_stat_button col-md-3">
                <i class="fa fa-fw o_button_icon fa-book icon"></i>
                <div class="o_stat_info">
                    <span class="o_stat_text">Balance</span>
                    <span class="o_stat_text"><span t-esc="partner_balance_sign_str" t-att-title="partner_balance_sign_title" class="badge badge-pill border"/> <span t-esc="partner_balance"/></span>
                </div>
            </a>
            <a t-if="page in ('payment', 'ledger')" role="button" href="/payment/card/transactions" class="btn oe_stat_button col-md-3">
                <i class="fa fa-fw o_button_icon fa-list icon"></i>
                <div class="o_stat_info">
                    <span class="o_stat_text">Last</span><span class="o_stat_text">Transactions</span>
                </div>
            </a>
        </div>
    </template>

    <template id="payment_card" name="Paylox Payment Card">
        <div class="payment-card row justify-content-center mx-0 h-100">
            <t t-call="payment_jetcheckout.payment_sidebar">
                <t t-set="page" t-value="'payment'"/>
            </t>
            <div class="col-md-9 row justify-content-center mx-0 navbar-light">
                <t t-call="payment_jetcheckout.payment_form"/>
            </div>
        </div>
    </template>

