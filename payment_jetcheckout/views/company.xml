<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="company_form" model="ir.ui.view">
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
        <xpath expr='//field[@name="currency_id"]' position="after">
            <field name="parent_id"/>
        </xpath>
    </field>
    </record>

    <record id="company_tree" model="ir.ui.view">
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_tree"/>
    <field name="arch" type="xml">
        <xpath expr='//field[@name="name"]' position="after">
            <button name="action_website_setting" type="object" string="Website Settings"/>
            <button name="action_company_details" type="object" string="Company Details"/>
            <button name="action_users" type="object" string="Internal Users"/>
            <button name="action_pos_setting" type="object" string="Virtual Pos Settings"/>
            <button name="action_jconda_integration" type="object" string="Jconda Integration"/>
        </xpath>
        <xpath expr='//field[@name="partner_id"]' position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
    </field>
    </record>
</odoo>
