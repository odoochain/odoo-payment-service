<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='paymentmethods-container']" position="after">
            <div class="paymentmethods-vpos">
                <div class="payment-buttons">
                    <div class="button altlight" t-on-click="showInstallments">
                        <i role="img" aria-label="Installment Table" title="Installment Table" class="fa fa-list"></i>
                        <span class="js_installment_table">Installment Table</span>
                    </div>
                </div>
                <ul class="card_families">
                    <t t-foreach="vpos_card_families" t-as="family" t-key="family">
                        <li>
                            <img t-att-src="family" alt=""/>
                        </li>
                    </t>
                </ul>
                <ul class="card_types">
                    <t t-foreach="vpos_card_types" t-as="type" t-key="type.id">
                        <li>
                            <img t-att-src="'data:image/png;base64,' + type.src" t-att-title="type.name" t-att-alt="type.name"/>
                        </li>
                    </t>
                </ul>
            </div>
        </xpath>
        <xpath expr="//div[@class='payment-buttons-container']" position="after">
            <div class="payment-vpos" t-att-class="{'d-none': vpos_amount &lt;= 0}">
                <div class="payment-table">
                    <div class="field-container">
                        <input id="ccname" type="text" required="required"/>
                        <span class="bar-container"/>
                        <label for="ccname"><span>Name</span></label>
                    </div>
                    <div class="field-container">
                        <input id="ccnumber" inputmode="numeric" pattern="[0-9]*" type="text" required="required"/>
                        <span class="bar-container"/>
                        <div id="cclogo" class="overflow-hidden fade card flex-row"/>
                        <svg id="ccicon" class="fade" width="750" height="471" viewBox="0 0 750 471"/>
                        <label for="ccnumber"><span>Card Number</span></label>
                    </div>
                    <div class="field-container">
                        <input id="ccexpiry" inputmode="numeric" pattern="[0-9]*" placeholder="MM/YY" type="text" required="required"/>
                        <span class="bar-container"/>
                        <label for="ccexpiry"><span>Expiration</span></label>
                    </div>
                    <div class="field-container">
                        <input id="ccsecurity" inputmode="numeric" pattern="[0-9]*" type="text" required="required"/>
                        <span class="bar-container"/>
                        <label for="ccsecurity"><span>Security Code</span></label>
                    </div>
                </div>
                <div class="installment-table">
                    <div class="installment-header">
                        <div>INSTALLMENT</div>
                        <div>MONTHLY</div>
                        <div>TOTAL</div>
                    </div>
                    <div id="installment_loading" class="installment-loading">
                        <i class="fa fa-3x fa-circle-o-notch fa-spin"/>
                    </div>
                    <div id="installment_rows" class="installment-rows"/>
                    <div id="installment_empty" class="installment-empty">
                        <i class="fa fa-info-circle mb-3" t-translation="off"/>
                        <span>Appliable installment options will be displayed here after you enter your credit card number</span>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
