<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="transaction_form" model="ir.ui.view">
    <field name="model">payment.transaction</field>
    <field name="inherit_id" ref="payment_jetcheckout.transaction_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='jetcheckout_installment_description_long']" position="before">
            <field name="paylox_contactless_ok" attrs="{'invisible': [('paylox_contactless_ok', '=', False)]}" readonly="1" widget="boolean_toggle" style="pointer-events:none"/>
        </xpath>
    </field>
    </record>
</odoo>
