<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form" model="ir.ui.view">
    <field name="model">payment.acquirer</field>
    <field name="inherit_id" ref="payment_jetcheckout.acquirer_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='jetcheckout_api_key']/.." position="after">
            <group string="Contactless Payment" attrs="{'invisible': [('jetcheckout_api_key','=',False)]}">
                <field name="paylox_contactless_apikey" string="API Key"/>
                <field name="paylox_contactless_secretkey" string="Secrey Key"/>
                <field name="paylox_contactless_url" string="Deeplink URL"/>
            </group>
        </xpath>
    </field>
    </record>
</odoo>
