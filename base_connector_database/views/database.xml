<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="connector_form" model="ir.ui.view">
    <field name="model">ir.connector</field>
    <field name="inherit_id" ref="base_connector.connector_form"/>
    <field name="arch" type="xml">
        <xpath expr='//field[@name="password"]' position="after">
            <field name="database" attrs="{'invisible': [('type', '!=', 'database')], 'required': [('type', '=', 'database')]}"/>
        </xpath>
    </field>
    </record>
</odoo>
