<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_form" model="ir.ui.view">
    <field name="model">mail.template</field>
    <field name="inherit_id" ref="mail.email_template_form"/>
    <field name="arch" type="xml">
        <xpath expr='//field[@name="model_id"]' position="after">
            <field name="company_id" groups="base.group_multi_company,base.group_system"/>
        </xpath>
        <xpath expr='//field[@name="model_id"]' position="attributes">
            <attribute name="invisible">context.get('settings',False)</attribute>
        </xpath>
    </field>
    </record>

    <record id="sms_template_form" model="ir.ui.view">
    <field name="model">sms.template</field>
    <field name="inherit_id" ref="sms.sms_template_view_form"/>
    <field name="arch" type="xml">
        <xpath expr='//field[@name="lang"]' position="after">
            <field name="company_id" groups="base.group_multi_company,base.group_system"/>
        </xpath>
        <xpath expr='//field[@name="model_id"]' position="attributes">
            <attribute name="invisible">context.get('settings',False)</attribute>
        </xpath>
    </field>
    </record>

    <record id="ir_mail_server_form" model="ir.ui.view">
    <field name="model">ir.mail_server</field>
    <field name="inherit_id" ref="base.ir_mail_server_form"/>
    <field name="arch" type="xml">
        <xpath expr='//field[@name="active"]' position="after">
            <field name="company_id" groups="base.group_multi_company,base.group_system" invisible="context.get('settings',False)"/>
            <field name="email" widget="email"/>
        </xpath>
    </field>
    </record>
</odoo>
