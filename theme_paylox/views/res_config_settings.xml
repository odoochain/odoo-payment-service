<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@name='companies_setting_container']" position="inside">
            <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="paylox_auto_create_website"/>
                </div>
                <div class="o_setting_right_pane">
                    <span class="o_form_label">Create Websites Automatically</span>
                    <div class="text-muted">
                        Create company website after a new company creation.
                    </div>
                </div>
            </div>
        </xpath>
    </field>
     </record>
</odoo>