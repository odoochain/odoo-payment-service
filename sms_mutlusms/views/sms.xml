<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.sms.mutlusms</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="sms_api.res_config_settings_view_form"/>
    <field name="priority" eval="10"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@name='sms_provider']" position="after">
            <h2>MutluSMS</h2>
            <div class="row mt16 o_settings_container" name="sms_mutlusms">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Credentials</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                        <div class="text-muted">
                            Enter your credentials
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="sms_mutlusms_username" class="col-lg-3 o_light_label" string="Username"/>
                                <field name="sms_mutlusms_username" attrs="{'required': [('sms_provider','=','mutlusms')]}"/>
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="sms_mutlusms_password" class="col-lg-3 o_light_label" string="Password"/>
                                <field name="sms_mutlusms_password" password="True" attrs="{'required': [('sms_provider','=','mutlusms')]}"/>
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="sms_mutlusms_originator" class="col-lg-3 o_light_label" string="Originator"/>
                                <field name="sms_mutlusms_originator" attrs="{'required': [('sms_provider','=','mutlusms')]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
    </record>
</odoo>
