<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="SyncButton" owl="1">
        <div t-if="syncing &amp;&amp; owner" class="sync-button highlight" t-on-click="onClick">
            <div>
                <i class="fa fa-spin fa-refresh" aria-hidden="true"/>
            </div>
            <div t-if="!env.isMobile">Synced</div>
        </div>
        <div t-elif="syncing &amp;&amp; !owner" class="sync-button highlight disabled">
            <div>
                <i class="fa fa-spin fa-refresh" aria-hidden="true"/>
            </div>
            <div t-if="!env.isMobile">Synced</div>
        </div>
        <div t-else="" t-attf-class="sync-button {{syncOk ? '' : 'disabled'}}" t-on-click="onClick">
            <div>
                <i class="fa fa-refresh" aria-hidden="true"></i>
            </div>
            <div t-if="!env.isMobile">Sync</div>
        </div>
    </t>
</templates>
