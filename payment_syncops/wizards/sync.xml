<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="form_sync" model="ir.ui.view">
    <field name="name">syncops.sync.wizard.form</field>
    <field name="model">syncops.sync.wizard</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <p class="h4 text-primary text-center" colspan="2">
                            <div class="mb-4"><i class="fa fa-2x fa-exclamation-circle"/></div>
                            <div class="mb-4">Please ensure the records to be synced</div>
                        </p>
                        <p class="h5 text-700 text-center" colspan="2">
                        <field name="count" readonly="1"/> record(s) will be synced
                        </p>
                        <field name="type" invisible="1"/>
                        <field name="system" invisible="1"/>
                    </group>
                    <group class="table-p-0">
                        <field name="line_ids" mode="tree" nolabel="1" colspan="2" force_save="1" readonly="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="partner_vat" string="VAT" force_save="1"/>
                                <field name="partner_name" string="Name" required="1" force_save="1"/>
                                <field name="partner_ref" string="Reference" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.type', '!=', 'partner')]}"/>
                                <field name="partner_email" string="Email" force_save="1" attrs="{'column_invisible': [('parent.type', '!=', 'partner')]}"/>
                                <field name="partner_phone" string="Phone" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.type', '!=', 'partner')]}"/>
                                <field name="partner_balance" string="Balance" force_save="1" attrs="{'column_invisible': [('parent.type', '!=', 'item')]}"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                            <form create="0" edit="0" delete="0">
                                <sheet>
                                    <div class="oe_title">
                                        <label for="partner_name" string="Name"/>
                                        <h1>
                                            <field name="partner_name" readonly="1" required="1" force_save="1"/>
                                        </h1>
                                    </div>
                                    <group>
                                        <group>
                                            <field name="partner_vat" string="VAT" readonly="1" force_save="1"/>
                                            <field name="partner_ref" string="Reference" readonly="1" force_save="1" attrs="{'invisible': [('parent.type', '!=', 'partner')]}"/>
                                        </group>
                                        <group>
                                            <field name="partner_email" string="Email" readonly="1" force_save="1" attrs="{'invisible': [('parent.type', '!=', 'partner')]}"/>
                                            <field name="partner_phone" string="Phone" readonly="1" force_save="1" attrs="{'invisible': [('parent.type', '!=', 'partner')]}"/>
                                            <field name="partner_balance" string="Balance" readonly="1" force_save="1" attrs="{'invisible': [('parent.type', '!=', 'item')]}"/>
                                            <field name="currency_id" invisible="1"/>
                                        </group>
                                    </group>
                                </sheet>
                                <footer/>
                            </form>
                        </field>
                    </group>
                </group>
            </sheet>
            <footer>
                <button name="confirm" type="object" class="btn-primary" string="Sync" icon="fa-exchange"/>
                <button special="cancel" class="btn-secondary" string="Close" icon="fa-times"/>
            </footer>
        </form>
    </field>
    </record>

    <record id="action_sync" model="ir.actions.act_window">
    <field name="name">Sync</field>
    <field name="res_model">syncops.sync.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    </record>
</odoo>
