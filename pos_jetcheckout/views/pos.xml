<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_form" model="ir.ui.view">
    <field name="model">pos.payment.method</field>
    <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='use_payment_terminal']" position="attributes">
            <attribute name="string">Payment Terminal</attribute>
        </xpath>
        <xpath expr="//field[@name='use_payment_terminal']" position="after">
            <label for="use_payment_terminal" string=""/>
            <button name="action_acquirer_jetcheckout" type="object" class="btn-link p-0" icon="fa-arrow-right" string="Configure Payment Acquirer" attrs="{'invisible': [('use_payment_terminal', 'not in', ('jetcheckout_virtual', 'jetcheckout_physical'))]}"/>
            <field name="jetcheckout_link_url" attrs="{'invisible': [('use_payment_terminal', '!=', 'jetcheckout_link')], 'required': [('use_payment_terminal', '=', 'jetcheckout_link')]}"/>
            <field name="jetcheckout_link_apikey" attrs="{'invisible': [('use_payment_terminal', '!=', 'jetcheckout_link')], 'required': [('use_payment_terminal', '=', 'jetcheckout_link')]}"/>
            <field name="jetcheckout_link_secretkey" attrs="{'invisible': [('use_payment_terminal', '!=', 'jetcheckout_link')], 'required': [('use_payment_terminal', '=', 'jetcheckout_link')]}"/>
        </xpath>
    </field>
    </record>

    <record id="pos_config_form" model="ir.ui.view">
    <field name="model">pos.config</field>
    <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@id='payment_methods_new']" position="after">
            <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                    <span class="o_form_label">Payment Link Lifetime</span>
                    <div class="text-muted">
                        Set a payment link validity duration in seconds
                    </div>
                    <div class="content-group mt16 row">
                        <label for="jetcheckout_link_duration" string="Duration" class="col-lg-3 o_light_label"/>
                        <field name="jetcheckout_link_duration" class="w-auto mr-1"/>seconds
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                    <span class="o_form_label">Store Code</span>
                    <div class="text-muted">
                        Specify a store code to be used on PoS terminal
                    </div>
                    <div class="content-group mt16 row">
                        <label for="jetcheckout_branch_code" string="Code" class="col-lg-3 o_light_label"/>
                        <field name="jetcheckout_branch_code"/>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
    </record>

    <record id="pos_order_form" model="ir.ui.view">
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
            <button type="object"
                name="action_view_transactions"
                class="oe_stat_button"
                icon="fa-credit-card"
                attrs="{'invisible': [('transaction_count', '=', 0)]}">
                    <field name="transaction_count" widget="statinfo" string="Transactions"/>
            </button>
        </xpath>
    </field>
    </record>

    <record id="pos_payment_form" model="ir.ui.view">
    <field name="model">pos.payment</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='card_type']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='cardholder_name']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='transaction_id']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='transaction_id']" position="after">
            <field name="payment_transaction_id" options="{'no_create': True}"/>
        </xpath>
    </field>
    </record>
</odoo>
