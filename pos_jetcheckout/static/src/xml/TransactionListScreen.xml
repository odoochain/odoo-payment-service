<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="TransactionListScreen" owl="1">
        <div class="clientlist-screen screen">
            <div class="screen-content">
                <div class="top-content">
                    <div class="button back" t-on-click="back">
                        <i class="fa fa-angle-double-left"/>
                        <t t-if="!env.isMobile"> Discard</t>
                    </div>
                    <div t-if="state.id" t-on-click="confirm" class="button next highlight">
                        <t t-if="!env.isMobile">
                            Select
                        </t>
                        <t t-else="">
                            <i class="fa fa-check"/>
                        </t>
                    </div>
                    <div class="top-content-center"/>
                    <div class="button back" t-on-click="refreshTransactions">
                        <span class="refresh-icon">
                            <i class="fa fa-refresh"/>
                        </span>
                        <t t-if="!env.isMobile">
                            <span class="refresh-transactions">
                                Refresh
                            </span>
                        </t>
                    </div>
                </div>
                <section class="full-content">
                    <div class="client-window">
                        <section class="subwindow list">
                            <div class="subwindow-container">
                                <div class="subwindow-container-fix scrollable-y">
                                    <table class="client-list">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Date</th>
                                                <th>Amount</th>
                                                <th class="client-line-last-column-placeholder oe_invisible"></th>
                                            </tr>
                                        </thead>
                                        <tbody class="client-list-contents">
                                            <t t-foreach="state.transactions" t-as="transaction" t-key="transaction.id">
                                                <tr t-attf-class="client-line {{state.id === transaction.id ? 'highlight' : '' }}" t-att-data-id="transaction.id" t-on-click="clickTransaction(transaction.id, transaction.amount)">
                                                    <td>
                                                        <t t-esc="transaction.reference" />
                                                    </td>
                                                    <td>
                                                        <t t-esc="getDate(transaction.last_state_change)" />
                                                    </td>
                                                    <td>
                                                        <t t-esc="env.pos.format_currency(transaction.amount)"/>
                                                    </td>
                                                    <td class="client-line-last-column-placeholder oe_invisible"></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>

</templates>
