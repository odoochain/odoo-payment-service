<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="BankPopup" owl="1">
        <div role="dialog" class="modal-dialog bank-dialog">
            <div class="popup bank-popup">
                <main>
                    <div class="payment-bank">
                        <div class="send-table">
                            <div class="field-info">You can send selected bank information to an email address of your customer</div>
                            <div class="field-container">
                                <input id="bank_email" type="text" required="required" t-att-value="partner.email"/>
                                <span class="bar-container"/>
                                <label for="bank_email"><span>Email Address</span></label>
                                <div class="button altlight" t-on-click="email"><i class="fa fa-envelope-o"/></div>
                            </div>
                            <div class="field-info" style="margin-top: 25px;">You can send an SMS message to mobile phone of your customer which refers selected bank information</div>
                            <div class="field-container">
                                <input id="bank_phone" type="text" required="required" t-att-value="partner.phone"/>
                                <span class="bar-container"/>
                                <label for="bank_phone"><span>Phone Number</span></label>
                                <div class="button altlight" t-on-click="sms"><i class="fa fa-commenting-o"/></div>
                            </div>
                        </div>
                        <div class="bank-table">
                            <h3 class="field-info">You can select any record you wish and send it to your customer</h3>
                            <div class="field-container">
                                <t t-foreach="banks" t-as="bank" t-key="bank.id">
                                    <div class="bank-item">
                                        <div>
                                            <img t-att-src="'data:image/png;base64, ' + bank.logo"/>
                                        </div>
                                        <div class="bank-info">
                                            <div class="bank-title">
                                                <strong t-esc="bank.name"/>
                                            </div>
                                            <div class="bank-detail">
                                                <table class="text-muted">
                                                    <tr>
                                                        <td class="text-right">IBAN</td>
                                                        <td class="text-left"><span t-esc="bank.iban"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-right">Account</td>
                                                        <td class="text-left"><span t-esc="bank.account"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-right">Branch</td>
                                                        <td class="text-left"><span t-esc="bank.branch"/></td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button cancel" t-on-click="cancel">Close</div>
                </footer>
            </div>
        </div>
    </t>
</templates>
