<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='paymentmethods-container']" position="after">
            <div t-if="env.pos.config.bank_ok" class="paymentmethods-bank">
                <div class="payment-buttons">
                    <div class="button altlight bank-button" t-on-click="showBankInfo">
                        <i role="img" aria-label="Bank Information" title="Bank Information" class="fa fa-bank"/>
                        <span class="js_bank_table">Bank Information</span>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='customer-button']/div" position="inside">
            <t t-set="client" t-value="env.pos.get_client()"/>
            <span t-if="client" class="client-balance text-white"><t t-esc="env.pos.format_currency(client.debit - client.credit)"/></span>
        </xpath>
        <xpath expr="//div[@class='customer-button']/div" position="attributes">
            <attribute name="class">button padding-icon</attribute>
        </xpath>
        <xpath expr="//div[@class='customer-button']" position="inside">
            <t t-set="address" t-value="env.pos.get_address()"/>
            <div class="button address-button padding-icon" t-att-class="{'highlight': address.id &amp;&amp; address.delivery &amp;&amp; address.id !== address.delivery.id}" t-on-click="selectAddress">
                <i class="fa fa-truck" role="img" aria-label="Address" title="Address"/>
                <span>
                    <t t-if="address.delivery">
                        <t t-esc="address.delivery.address"/>
                    </t>
                    <t t-else="">Address</t>
                </span>
            </div>
        </xpath>
    </t>

    <t t-inherit="point_of_sale.Notification" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='notification']" position="attributes">
            <attribute name="t-att-class">{'success': props.duration === 2001, 'danger': props.duration === 2002}</attribute>
        </xpath>
    </t>
</templates>