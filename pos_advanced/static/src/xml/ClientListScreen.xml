<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//ClientLine" position="attributes">
            <attribute name="t-if">!partner.type || partner.type === 'contact'</attribute>
        </xpath>
        <xpath expr="//th[@class='client-line-email']" position="after">
            <th class="client-line-balance">Balance</th>
        </xpath>
    </t>
    <t t-inherit="point_of_sale.ClientLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//td[@class='client-line-email']" position="after">
            <td class="client-line-email">
                <t t-esc="env.pos.format_currency(props.partner.debit - props.partner.credit)"/>
                <span t-if="highlight"><br/></span>
            </td>
        </xpath>
    </t>
</templates>