<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="AddressScreen" owl="1">
        <div class="clientlist-screen screen">
            <div class="screen-content">
                <div class="top-content">
                    <div class="button back" t-on-click="back">
                        <i class="fa fa-angle-double-left"/>
                        <t t-if="!env.isMobile"> Discard</t>
                    </div>
                    <div class="button" t-on-click="trigger('click-save')">
                        <i class="fa fa-floppy-o"/>
                        <t t-if="!env.isMobile">
                            <span> Save</span>
                        </t>
                    </div>
                </div>
                <section class="full-content">
                    <div class="client-window">
                        <section class="subwindow collapsed">
                            <div class="subwindow-container collapsed">
                                <div class="client-details-contents subwindow-container-fix">
                                    <ClientDetailsEdit t-props="state.editModeProps" addressType="addressType"/>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>
</templates>
