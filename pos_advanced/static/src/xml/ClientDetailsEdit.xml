<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='client-details-left']/.." position="after">
            <div class="client-details-box clearfix">
                <div class="client-details-tabs">
                    <div class="client-tabs">
                        <div class="client-tabs-tab"><div>Addresses</div></div>
                    </div>
                    <div class="client-tabs-content client-address">
                        <t t-foreach="getContacts()" t-as="contact" t-key="contact.id">
                            <t t-if="['delivery', 'invoice'].includes(contact.type)">
                                <button class="client-tabs-content-item">
                                    <div class="client-tabs-content-item-selection" t-att-class="{'client-tabs-content-item-selected': state.contacts.includes(contact.id)}" t-on-click="selectContact(contact.id)"><i class="fa fa-check"/></div>
                                    <div class="client-tabs-content-icon" t-on-click="setContact(contact.id)">
                                        <i class="fa" t-att-class="{'fa-truck': contact.type === 'delivery', 'fa-file-text-o': contact.type === 'invoice'}"/>
                                    </div>
                                    <div class="client-tabs-content-name" t-on-click="setContact(contact.id)">
                                        <div class="client-tabs-content-title">
                                            <span t-if="contact.name" t-esc="contact.name"/>
                                            <span t-else="">Address</span>
                                        </div>
                                        <div class="client-tabs-content-detail">
                                            <span t-esc="contact.address"/>
                                        </div>
                                    </div>
                                </button>
                            </t>
                        </t>
                        <button class="client-tabs-content-item client-tabs-content-add" t-on-click="setContact(0)">
                            <div class="client-tabs-content-icon">
                                <i class="fa fa-plus"/>
                            </div>
                            <div class="client-tabs-content-name">
                                Add Address
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>